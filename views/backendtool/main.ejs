<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="UTF-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1" />
 <title>BackendOpsTool</title>
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
 <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

 <div class="card">
   <div class="section-title mb-4">
     <h3 class="fw-bold border-bottom pb-2">BackendOpsTool</h3>
   </div>

   <form id="dynamicForm">
     <div class="form-grid mb-3">
       <!-- Country -->
       <div>
         <label for="country" class="form-label">Country</label>
         <select class="form-select" id="country">
           <option value="">Select Country</option>
         </select>
       </div>

       <!-- City -->
       <div id="cityContainer" class="d-none">
         <label for="city" class="form-label">City</label>
         <select class="form-select" id="city">
           <option value="">Select City</option>
         </select>
       </div>

       <!-- App Type -->
       <div id="appTypeContainer" class="d-none">
         <label for="appType" class="form-label">App Type</label>
         <select class="form-select" id="appType">
           <option value="">Select App Type</option>
         </select>
       </div>

       <!-- User Input -->
       <div id="userInputContainer" class="d-none">
         <label for="userInput" class="form-label">Enter Data</label>
         <input type="text" class="form-control" id="userInput" placeholder="Your input here" />
       </div>
     </div>

     <button type="button" class="btn btn-primary d-none" id="submitButton">Submit</button>
   </form>
 </div>

 <!-- Submitted Entries Section -->
 <div id="entriesSection" class="mt-4 card d-none">
   <h5>Submitted Entries</h5>
   <div class="accordion" id="entriesAccordion"></div>
 </div>

 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
 <script src="/js/main.js"></script>

 <!-- Bootstrap Modal -->
 <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered">
     <div class="modal-content">
       <div class="modal-header">
         <h5 class="modal-title" id="detailModalLabel">Detail Info</h5>
         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
       </div>
       <div class="modal-body" id="detailModalBody"></div>
     </div>
   </div>
 </div>

</body>
</html>
